<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/totalLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">


    <FrameLayout
        android:id="@+id/gameFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fussballfeld">

        <ImageView
            android:id="@+id/goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/goooal"
            android:alpha="0.9"
            tools:visibility="invisible"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/fussball"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/fussball"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/player1"
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:src="@drawable/klavier"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sekAnzeige"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/football"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/fussball"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/player2"
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:layout_marginBottom="100dp"
            android:src="@drawable/klavier"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <LinearLayout
            android:id="@+id/startLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:background="@drawable/background"
                android:onClick="startGame"
                android:text="Start"
                android:textColor="#E6E6E6"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btnLevel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="1"
                android:background="@drawable/background"
                android:onClick="level1"
                android:text="Level 1"
                android:textColor="#E6E6E6"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnLevel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:text="Level 2"
                android:alpha="0.7"
                android:textSize="18dp"
                android:elevation="20dp"
                android:onClick="level2"
                android:textColor="#E6E6E6"
                />

            <Button
                android:id="@+id/btnLevel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:text="Level 3"
                android:alpha="0.7"
                android:textSize="18dp"
                android:elevation="20dp"
                android:onClick="level3"
                android:textColor="#E6E6E6"
                />

        </LinearLayout>


    </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/scorePlayer1"
                android:layout_width="132dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Score Player 1: 0"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnQuit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/background"
                android:text="Quit"
                android:textColor="#E6E6E6"
                />

            <Button
                android:id="@+id/btnPauseResume"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/background"
                android:text="Pause"
                android:textColor="#E6E6E6"/>

            <TextView
                android:id="@+id/scorePlayer2"
                android:layout_width="129dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Score Player 2: 0"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>


</LinearLayout>